<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ants.antsbackground.mapper.feedback.FeedbackMapper">

    <!--获取用户的反馈列表信息-->
    <select id="listFeedback" parameterType="Map" resultType="com.ants.antsbackground.entity.feedback.Feedback">
        SELECT fbId,fbSerial,fbSatisfaction,fbTime
              FROM ants_management_feedback
                  LiMIT #{head},#{length}
    </select>

    <!--获取用户反馈信息的数量-->
    <select id="countFeedbackNumber" resultType="Integer">
        SELECT COUNT(*) FROM ants_management_feedback
    </select>

    <!--彻底删除用户反馈信息-->
    <delete id="deleteFeedback" parameterType="Integer">
        DELETE FROM ants_management_feedback
              WHERE fbId = #{fbId}
    </delete>

    <!--将反馈信息状态进行更改，即进入回收站-->
    <update id="updateFeedback" parameterType="Map">
        UPDATE ants_management_feedback
              SET state = #{state}
                  WHERE fbId = #{fbId}
    </update>

</mapper>